<body>
  <div class="stars"></div>

  <h1>حبيبتي ريتاج</h1>
  <p>كل لحظة حب ودفء في قلبي لك 💖</p>

  <audio id="nasheed" loop>
    <source src="https://cdn.islamic.network/audio/nasheed/maher_zain-assalamu_alayka.mp3" type="audio/mpeg" />
    متصفحك لا يدعم تشغيل الأناشيد.
  </audio>
  <button id="btnPlay">تشغيل الصوت</button>

  <script>
    // نجوم في الخلفية
    const starsContainer = document.querySelector('.stars');
    const starCount = 120;
    for(let i = 0; i < starCount; i++) {
      const star = document.createElement('div');
      star.classList.add('star');
      const size = Math.random() * 2 + 1;
      star.style.width = `${size}px`;
      star.style.height = `${size}px`;
      star.style.top = `${Math.random() * 100}%`;
      star.style.left = `${Math.random() * 100}%`;
      star.style.animationDelay = `${Math.random() * 4}s`;
      starsContainer.appendChild(star);
    }

    // تحكم في الصوت
    const audio = document.getElementById('nasheed');
    const btn = document.getElementById('btnPlay');
    let playing = false;

    btn.addEventListener('click', () => {
      if (!playing) {
        audio.play();
        btn.textContent = 'إيقاف الصوت';
        playing = true;
      } else {
        audio.pause();
        btn.textContent = 'تشغيل الصوت';
        playing = false;
      }
    });

    // نعطي المستخدم تحكم ونخلي الصوت متوقف بالبداية (لحماية تجربة المستخدم)
  </script>
</body>
</html>
